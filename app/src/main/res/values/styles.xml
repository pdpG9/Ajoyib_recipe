<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextStyleItemDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_description_black</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_clickable_text</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">12dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">29dp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/margin_main</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">@dimen/margin_mediumTop</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/text_size_main_title</item>
    </style>



</resources>