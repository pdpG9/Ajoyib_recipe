<resources >
    <!-- Base application theme. -->
    <style name="Theme.AjoyibRisep" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ItemTitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_item_large</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/text_title_black</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
    </style>

    <style name="CategoryItemCardStyle">
        <item name="cardBackgroundColor">@color/selected_category</item>
    </style>


</resources>