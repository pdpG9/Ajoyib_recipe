<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AjoyibRisep" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ItemTitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_item_large</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/text_title_black</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
    </style>
    <style name="ButtonBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/black</item>
        <item name="android:padding">@dimen/margin_item_large</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/margin_item_large</item>
    </style>
    <style name="MenuButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_ingredients_light</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">12dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">29dp</item>
    </style>
    <style name="CategoryItemCardStyle">
        <item name="cardBackgroundColor">@color/un_selected_category</item>
    </style>
    <style name="ItemIngredientsLayoutStyle">
        <item name="android:background">@drawable/bg_ingredients_light</item>
    </style>
    <style name="MealLinkCardStyle">
        <item name="cardBackgroundColor">#FFF6F1</item>
    </style>


</resources>